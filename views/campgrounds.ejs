<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Check out them amazing wild ride retreats</p>
            <p><a class="btn btn-primary btn-lg float-left" href="/campgrounds/new">Add Campground</a></p>
            <!-- <p><a class="btn btn-secondary btn-lg float-left" href="/">Go Back</a></p> -->
        </div>
    </header>


    <div class="row">

        <div class="col-xl-12 text-center">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-6 col-lg-3"> 
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>" class="img-fluid">
                    <div class="caption pt-3 text-center">
                        <h4> <%= campground.name %> </h4>
                    </div>
                </div>
            </div> 
        <% }); %>
    </div>

    

</div>
<% include partials/footer %>